generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  firstName String
  lastName String
  pronouns String?
  age Int?
  major String?
  interests Int[]
  bio String?
  blockedUsers Int[]
  friends Int[]
}

model UserLocation {
  id Int @id @default(autoincrement())
  userId Int @unique
  latitude Decimal
  longitude Decimal
}
