generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  firstName String
  lastName String
  pronouns String?
  age Int?
  major String?
  interests Int[]
  bio String?
  blockedUsers Int[]
  friends Int[]
}

model UserGeohash {
  id Int @id @default(autoincrement())
  userId Int @unique
  geohash String
}

model UserPastGeohash {
  id Int @id @default(autoincrement())
  userId Int
  timestamp DateTime
  geohash String
  duration Int
}

model FriendRequest {
  id Int @id @default(autoincrement())
  fromUser Int
  toUser Int
}

model Message {
  id Int @id @default(autoincrement())
  fromUser Int
  toUser Int
  text String
  timestamp DateTime
  read Boolean @default(false)
}
